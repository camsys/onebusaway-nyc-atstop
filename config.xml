<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.khurshidfayzullaev.bustime" versionCode="1" version="1.0">

    <preference name="phonegap-version" value="3.5.0" />

    <!-- modify to compile for iOS, Windows Mobile, and etc. -->
    <!-- <gap:platform name="ios" />-->
    <gap:platform name="android" />
    <!-- <gap:platform name="webos" /> -->
    <!-- <gap:platform name="symbian" /> -->
    <!-- <gap:platform name="blackberry" /> -->
    <!-- <gap:platform name="winphone" /> -->

    <name>At Stop</name>

    <description>
        Get information about when the next bus will arrive at your stop.
    </description>

    <author href="https://github.com/khfayzullaev" email="khurshidfayzullaev@yahoo.com">
        Khurshid Fayzullaev
    </author>

    <!-- Android icons -->
    <icon src="resources/images/icons/icon_36x36.png" gap:platform="android" gap:density="ldpi" />
    <icon src="resources/images/icons/icon_48x48.png" gap:platform="android" gap:density="mdpi" />
    <icon src="resources/images/icons/icon_72x72.png" gap:platform="android" gap:density="hdpi" />
    <icon src="resources/images/icons/icon_96x96.png" gap:platform="android" gap:density="xhdpi" />

    <!-- Android splashes -->
    <gap:splash src="resources/images/splashes/splash_200x320.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="resources/images/splashes/splash_320x480.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="resources/images/splashes/splash_480x800.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="resources/images/splashes/splash_720x1280.png" gap:platform="android" gap:density="xhdpi" />

    <!-- resume to the start -->
    <preference name="AndroidLaunchMode" value="singleTask" />

    <!-- permissions -->
    <preference name="permissions" value="none" />
    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <feature name="http://api.phonegap.com/1.0/network" />

    <!-- access network information -->
    <!-- Supported in Phonegap 3.3.0 and + -->
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.network-information" />

    <!-- clean cache -->
    <!-- Supported in Phonegap 3.3.0 and + -->
    <gap:plugin name="com.sharinglabs.cordova.plugin.cache" version="1.0.0" />

    <!-- hide the status bar on iOS 7 devices -->
    <!--    <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />-->
    <!--    <gap:config-file platform="ios" parent="UIStatusBarHidden">-->
    <!--        <true/>-->
    <!--    </gap:config-file>-->

    <!--    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">-->
    <!--        <false/>-->
    <!--    </gap:config-file>-->
</widget>
